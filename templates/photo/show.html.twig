{% extends 'base.html.twig' %}

{% block title %}Pic
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row align-items-center flex-column">
			<h1>Pic</h1>
			<p>{{ photo.name }}</p>

			<img class="rounded" style=" width: 300px;" src="{{ asset ('photos/pictures/' ~ photo.name ) }}">

			<div class="row mt-2">
				{% if is_granted('ROLE_CONSUMER') %}
					<a class="p-1 mx-2 btn btn-outline-success" href="{{ path('photo_index') }}">back to list</a>
				{% elseif is_granted('ROLE_ADMIN') %}
					<a class="p-1 mx-2 btn btn-outline-warning" href="{{ path('photo_edit', {'id': photo.id}) }}">edit</a>
					{{ include('photo/_delete_form.html.twig') }}
				{% endif %}

			</div>
		</div>
	</div>

{% endblock %}
