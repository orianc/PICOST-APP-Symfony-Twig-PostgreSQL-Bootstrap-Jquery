{% extends 'base.html.twig' %}

{% block title %}Picbook
{% endblock %}

{% block body %}
	<div class="container-fluid py-5">
		<h2 class="text-center">Picbook</h2>

		{% block albums %}
			<div
				class="row  justify-content-center align-items-center">
				{# {% include "album/_navalbums.html.twig" %} #}

				{% if is_granted('ROLE_ADMIN') %}
					<a class="badge rounded-pill mb-2" href="{{ path('album_new') }}">
						<i class="fas fa-folder-plus fa-2x"></i>
					</a>
				{% endif %}
				{% for album in albums %}
					<div class="col-6 col-md-3 col-lg-2 d-flex justify-content-center">
						<a class="text-center" href="{{ path('album_show', {'id': album.id}) }}">
							<i class="fas fa-folder fa-4x"></i>
							<p>{{album.name}}</p>
						</a>
					</div>

				{% endfor %}


				{# <div class="col-9 rounded bg-dark row justify-content-center py-3 ">
																																																																																				{% for p in albums[0].photos %}
																																																																																				{% include "album/_gallerypattern.html.twig" %}
																																																																																				
																																																																																				{% endfor %}
																																																																																				</div> #}

			</div>
		{% endblock %}
	</div>
{% endblock %}
