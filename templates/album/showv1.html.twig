{% extends 'base.html.twig' %}

{% block title %}Album
{% endblock %}

{% block body %}
	<div class="py-5">
		<div class="container">
			<h2>{{ album.name }}</h2>

			<div class="row justify-content-between">

				<div class="">
					<p class="badge">Créé le
						{{ album.createAt ? album.createAt|date('Y-m-d H:i:s') : '' }} 
					Dernier ajout le
						{{ album.updateAt ? album.updateAt|date('Y-m-d H:i:s') : '' }}</p>
				</div>

				<div class="">
					<a class="btn btn-primary" href="{{ path('album_index') }}">Retour aux albums</a>
					<a class="btn btn-secondary" href="{{ path('album_edit', {'id': album.id}) }}">Modifier</a>

				</div>
			</div>

			<div class="row">
				{% for p in album.photos %}
					<div class="col-2 m-2" style="height : 200px ; width: 200px;">
						<p>{{p.name}}</p>
						<img class="w-75 rounded" src="{{ asset ('photos/' ~ p.name ~ '.jpeg' ) }}" alt="">
					</div>
				{% endfor %}
			</div>


		</div>


		{{ include('album/_delete_form.html.twig') }}
	{% endblock %}
